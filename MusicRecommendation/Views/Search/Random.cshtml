@model RandomTrackVM

<div >
    <h3 class="test-class">Random song for you: </h3>

</div>

        <div class="row lucky-result-container">
            <div class="col-lg-4 col-sm-12 search-result-list">
                <img class="result-image" src="@Model.ImageUrl" />
            </div>
            <div class="col-lg-8 col-sm-12 search-result-list">
                <h2>@Model.Name</h2>
                <h3>@Model.Artist</h3>
                <video width="320" height="20" controls>
                    <source src="@Model.PreviewUrl" type="video/mp4">
                    <source src="@Model.PreviewUrl" type="video/ogg">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
@using (Html.BeginForm("Random", "Search", FormMethod.Post))
{
    <div class="col-lg-12 center">
        <input type="submit" class="btn-btn-default generate-btn" value="I feel luckier!" />
    </div>
}


